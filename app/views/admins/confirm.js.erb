$('.just-confirmed').removeClass('just-confirmed');
$('#admin_<%= @admin.id %>').replaceWith($('<%= escape_javascript(render partial: @admin, locals: {just_confirmed: true}) %>'));
$('#notice').empty()
  .append($('<%= escape_javascript(render partial: "layouts/notice") %>'))
  .find('.notice').text('Admin <%= @admin.email %> was successfully confirmed.')
