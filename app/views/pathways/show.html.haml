.row-fluid
  .span6
    .row-fluid
      .span12
        %h4 Pathway
      .offset1.span11
        = @pathway.name

    .row-fluid
      .span12
        = link_to 'Edit', edit_pathway_path(@pathway), class: 'btn btn-small'
        = link_to 'Destroy', @pathway, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small'

  .span6
    %h4= "Questions for #{@pathway.name}"

    %p= link_to 'Update Questions Order', pathway_questions_order_path(@pathway), class: 'btn btn-mini'

    %table(border=true)
      %thead
        %tr
          %th Question
          %th Order
      %tbody
        = render partial: @pathway.questions
