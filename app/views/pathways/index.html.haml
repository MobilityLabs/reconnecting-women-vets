= render 'layouts/notice'

.row-fluid
  .span12
    %table(border=true)
      %thead
        %tr
          %th Pathway
          %th Question
          %th Answer
          %th Goto pathway
      %tbody
        - @pathways.each do |pathway|
          - if pathway.questions.count > 0
            - new_pathway = true
            - p_rows = pathway.questions.reduce(0) {|tot, q| tot += q.answers.count }
            - pathway.questions.each do |question|
              - if question.answers.count > 0
                - new_question = true
                - q_rows = question.answers.count
                - question.answers.each do |answer|
                  %tr.answer
                    - if new_pathway
                      %td{rowspan: p_rows}= link_to pathway.name, pathway
                    - if new_question
                      %td{rowspan: q_rows}= question.text
                    %td= link_to answer.text, answer
                    %td
                      - if answer.goto_pathway.present?
                        = answer.goto_pathway.name
                      - else
                        (continue on current)
                  - new_pathway = new_question = false
              - else
                %tr.question-no-answers
                  %td= link_to pathway.name, pathway
                  %td= link_to question.text, question
                  %td
                  %td
          - else
            %tr.pathway-no-questions
              %td= link_to pathway.name, pathway
              %td
              %td
              %td
