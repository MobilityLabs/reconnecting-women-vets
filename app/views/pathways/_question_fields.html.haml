.question.row-fluid
  .span1
    = link_to_remove_fields "remove", f
  .span10
    .row-fluid
      %fieldset
        %legend
          %h3 Question
          = f.text_area :text, {rows: 2, placeholder: 'Type the question'}
          = f.label :order do
            Order of Question
            = f.number_field :order
    .actions.row-fluid
      .span12
        %fieldset
          %legend
            Actions
            = f.fields_for :actions do |builder|
              = render 'action_fields', f: builder
            = link_to_add_fields "Add Actions", f, :actions