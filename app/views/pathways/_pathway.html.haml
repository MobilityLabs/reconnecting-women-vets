%tr.pathway{id: "pathway_#{pathway.id}"}
  - if pathway.new_record?
    %td.sortby
      %i Create a new Pathway
    %td= link_to 'New', new_pathway_path(pathway)
  - else
    %td.sortby= link_to pathway.name, pathway
    %td
      = link_to 'Edit', edit_pathway_path(pathway)
      = link_to 'Destroy', pathway, method: :delete, remote: true, data: { confirm: 'Are you sure?' }
