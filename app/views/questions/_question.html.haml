%tr.question{id: "question_#{question.id}"}
  %td.pathway= question.pathway.name
  %td= link_to question.text, question
  %td.sortby= question.order
  %td
    = link_to 'Edit', edit_question_path(question)
    = link_to 'Destroy', question, method: :delete, remote: true, data: { confirm: 'Are you sure?' }
