= form_for(@question, remote: true) do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    - if @pathway.present?
      = f.hidden_field :pathway_id, value: @pathway.id
    - else
      = f.label :pathway
      = f.select :pathway_id, options_for_select(@pathways.to_a.map {|p| [p.name, p.id]}), class: 'question_attribute'
  .field
    = f.label :order
    = f.text_field :order, class: 'question_attribute'
  .field
    = f.label :text
    = f.text_area :text, size: '400x4', style: 'width: 400px', class: 'question_attribute'

  .actions
    = f.submit 'Save'
