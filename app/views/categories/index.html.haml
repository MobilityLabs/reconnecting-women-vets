.row-fluid
  .span12
    %p#notice= notice
.row-fluid
  .span6
    %h2 Listing categories

    %table
      %thead
        %tr
          %th Name
          %th(colspan=3) Actions
      %tbody#categories
        - @categories.each do |category|
          = render category

  .span6
    .hero-unit
      %h4 Create a new category:
      = render 'form'
