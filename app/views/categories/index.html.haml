.row-fluid
  .span12
    %p#notice= notice
.row-fluid
  .span6
    %h2 Listing categories

    %table(border=true)
      %thead
        %tr
          %th Name
          %th(colspan=3) Actions
      %tbody#categories
        = render partial: 'new'
        - @categories.each do |category|
          = render category
