.row-fluid
  .span12
    %p#notice= notice
.row-fluid
  .span6.white
    %h4 Listing categories

    %table(border=true)
      %thead
        %tr
          %th Name
          %th Actions
      %tbody#categories
        - @categories.each do |category|
          = render partial: category
  .span6.white
    %h4 Add new category:
    = render partial: 'form'
