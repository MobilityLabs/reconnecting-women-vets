$('.category').removeClass('just-created');
$('<%= escape_javascript(render @category) %>').addClass('unsorted just-created').appendTo('#categories');
$('.category').detach().sort(function(a,b) {
  return $(a).find('td.sortby').text() > $(b).find('td.sortby').text() 
}).appendTo('#categories');
$('.category').removeClass('unsorted');
$('#notice').text('Resource category was successfully created.')
$('#category_name').val('');
