= form_for @resource do |f|
  - if @resource.errors.any?
    #error_explanation
      %h2= "#{pluralize(@resource.errors.count, "error")} prohibited this resource from being saved:"
      %ul
        - @resource.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :starting_weight
    = f.number_field :starting_weight
  .field
    = f.label :category
    = f.select :category_id, options_for_select(Category.all.collect{ |rc| [rc.name, rc.id]})
  .actions
    = f.submit 'Save'
