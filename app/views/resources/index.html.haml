.row-fluid
  .span12
    %p#notice= notice

.row-fluid
  .span12
    %h1 Listing resources
    %table(border=true)
      %thead
        %tr
          %th Name
          %th Link
          %th Starting Weight
          %th Category
          %th Actions
      %tbody{id: "resources"}
        = render partial: 'new', locals: {remote: true}
        - @resources.each do |resource|
          = render partial: resource
