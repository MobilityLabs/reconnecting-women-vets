.row-fluid
  .span12
    %p#notice= notice

.row-fluid
  .span8
    %h1 Listing resources
    %table(border=true)
      %thead
        %tr
          %th Name
          %th Link
          %th Starting Weight
          %th Category
          %th Actions
      %tbody{id: "resources"}
        - @resources.each do |resource|
          = render resource
  .span4
    .hero-unit
      %h4 Create a new resource:
      = render partial: 'form', locals: {remote: true}
