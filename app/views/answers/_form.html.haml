= form_for(@answer, remote: false) do |f|

  .field
    .control-group
      = f.label :text, class: 'control-label'
      .controls
        = f.text_area :text, rows: 2, class: 'answer_attribute'

  .field
    .control-group
      = f.label :reassurance, class: 'control-label'
      .controls
        = f.text_area :reassurance, rows: 4, class: 'answer_attribute'

  .field
    .control-group
      = f.label :end_of_path, class: 'control-label'
      .controls
        = f.check_box :end_of_path, class: 'answer_attribute'

  #goto_pathway{class: "field#{' hidden' if @answer.end_of_path}"}
    .control-group
      = f.label :pathway_id, 'Goto pathway', class: 'control-label'
      .controls
        = f.select :pathway_id, @pathways.collect {|p| [p.name, p.id]}, {include_blank: '(return to previous)'}

  .field
    .control-group
      = f.label :resource_ids, 'Resources', class: 'control-label'
      .controls
        = f.select :resource_ids, @resources.collect {|r| [r.name, r.id]}, {prompt: 'Select some resources...'}, {multiple: true, rows: 5}

  .action
    = f.submit
